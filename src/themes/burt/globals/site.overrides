/*-------------------
      Background
--------------------*/

.ui.light-bg {
  background-color: #f5f7f9 !important;
}
.ui.segment.light-bg {
  margin-top: 0;
}

/*-------------------
       Divider
--------------------*/

.divider-column {
    position: relative;
    padding: 0 !important;
}

/*-------------------
       Login
--------------------*/
.forgot-pass {
  margin-top: 15px;
}
.login .ui.form .icon {
  color: #98AFC5;
  opacity: 1 !important;
}

/*-------------------
       Button
--------------------*/
.ui.basic.link {
  color: #6D849A;
}

.ui.basic.link .icon {
  color: #98AFC5;
}

.ui.basic.link:hover {
  color: #0078FF;
}

.ui.basic.link:hover .icon {
  color: #0078FF;
}

/*-------------------
       Hub
--------------------*/
.hub .ui.image {
  margin: auto;
}
.hub .title {
  font-size: 16px;
  color: #6D849A;
  font-weight: normal;
}